<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        style="@style/box"
        android:layout_width="@dimen/homework_size"
        android:layout_height="@dimen/homework_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ligth_gray">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_homework_title"
                style="@style/box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.100" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_homework_time_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_homework_time_ready"
                app:layout_constraintStart_toStartOf="@+id/card_homework_title"
                app:layout_constraintTop_toBottomOf="@+id/card_homework_title"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/baseline_query_builder_black_18dp" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_homework_time_ready"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time ready"
                android:textAlignment="textStart"
                android:textColor="@color/dark_gray"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_homework_time_image"
                app:layout_constraintTop_toBottomOf="@+id/card_homework_title"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="@dimen/radius_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/card_homework_title"
                app:layout_constraintVertical_bias="0.0"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/card_homework_image"
                    android:background="@color/dark_gray"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    app:srcCompat="@android:drawable/sym_action_chat" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/card_homework_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="text homework"
                android:textAlignment="textStart"
                style="@style/box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_homework_time_ready"
                app:layout_constraintVertical_bias="0.16" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/card_homework_icon"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                style="@style/box"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/sym_action_chat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>